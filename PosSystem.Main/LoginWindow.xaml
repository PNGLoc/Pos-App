<Window x:Class="PosSystem.Main.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập hệ thống"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White"
            CornerRadius="20"
            BorderBrush="#DDD"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              ShadowDepth="5"
                              Opacity="0.3"/>
        </Border.Effect>
        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                <!-- Logo / Tiêu đề -->
                <TextBlock Text="POS SYSTEM"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#007BFF"
                           Margin="0,0,0,30"/>

                <!-- Username -->
                <TextBlock Text="Tên đăng nhập"
                           Foreground="#666"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser"
                         Height="40"
                         FontSize="16"
                         Padding="5"
                         VerticalContentAlignment="Center"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu"
                           Foreground="#666"
                           Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPass"
                             Height="40"
                             FontSize="16"
                             Padding="5"
                             VerticalContentAlignment="Center"/>

                <!-- Button Login -->
                <Button Content="ĐĂNG NHẬP"
                        Height="45"
                        Margin="0,30,0,10"
                        Background="#007BFF"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="BtnLogin_Click"
                        IsDefault="True"/>

                <!-- Button Thoát -->
                <Button Content="Thoát"
                        Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#888"
                        Click="BtnExit_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
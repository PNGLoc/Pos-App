<Window x:Class="PosSystem.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PosSystem.Main"
        Title="POS SYSTEM - QUẢN LÝ BÀN"
        Height="768"
        Width="1366"
        WindowState="Maximized"
        Background="#F0F2F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>

        <Style x:Key="PrinterToggleStyle"
               TargetType="ToggleButton">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                CornerRadius="5"
                                Padding="10,5"
                                BorderThickness="0">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBlock x:Name="txtIcon"
                                           Text="🖨"
                                           Margin="0,0,5,0"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="txtStatus"
                                           Text="In Bill: Bật"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#28A745"/>
                                <Setter TargetName="txtStatus"
                                        Property="Text"
                                        Value="In Bill: Bật"/>
                                <Setter TargetName="txtIcon"
                                        Property="Text"
                                        Value="🖨"/>
                            </Trigger>
                            <Trigger Property="IsChecked"
                                     Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#DC3545"/>
                                <Setter TargetName="txtStatus"
                                        Property="Text"
                                        Value="In Bill: Tắt"/>
                                <Setter TargetName="txtIcon"
                                        Property="Text"
                                        Value="🚫"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked"
                         Value="False">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever"
                                        AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1.0"
                                                 To="0.4"
                                                 Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="1.0"
                                                 Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="NoteTextBoxStyle"
               TargetType="TextBox">
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="Gray"/>
            <Setter Property="FontStyle"
                    Value="Italic"/>
            <Setter Property="Padding"
                    Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused"
                                     Value="True">
                                <Setter Property="BorderThickness"
                                        Value="1"/>
                                <Setter Property="BorderBrush"
                                        Value="#007BFF"/>
                                <Setter Property="Background"
                                        Value="White"/>
                                <Setter Property="Foreground"
                                        Value="Black"/>
                                <Setter Property="FontStyle"
                                        Value="Normal"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Padding="15,10"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="Gray"
                                  BlurRadius="5"
                                  ShadowDepth="1"
                                  Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,30,0">
                        <TextBlock Text="Thu ngân: "
                                   Foreground="#666"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="lblStaffName"
                                   Text="..."
                                   FontWeight="Bold"
                                   Foreground="#007BFF"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="btnBackToAdmin"
                            Content="⚙ ADMIN"
                            Click="BtnBackToAdmin_Click"
                            Height="35"
                            Background="#343A40"
                            Foreground="White"
                            Padding="15,0"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"
                            Visibility="Collapsed">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="📜 LỊCH SỬ"
                            Click="BtnHistory_Click"
                            Height="35"
                            Background="#17A2B8"
                            Foreground="White"
                            Padding="15,0"
                            BorderThickness="0"
                            FontWeight="SemiBold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <ToggleButton x:Name="tglPrintBill"
                              Style="{StaticResource PrinterToggleStyle}"
                              IsChecked="True"
                              Height="35"
                              HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Margin="0,0,10,0"
                    Background="White"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                                      BlurRadius="10"
                                      ShadowDepth="0"
                                      Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid x:Name="pnlTableList"
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="SƠ ĐỒ PHÒNG BÀN"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="20,15"/>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="lstTables"
                                     SelectionChanged="lstTables_SelectionChanged"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="150"
                                                Height="120"
                                                Margin="15"
                                                CornerRadius="12"
                                                Cursor="Hand"
                                                Background="{Binding ColorBrush}">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Gray"
                                                                  BlurRadius="5"
                                                                  ShadowDepth="2"
                                                                  Opacity="0.3"/>
                                            </Border.Effect>
                                            <StackPanel VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TableName}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="22"
                                                           TextAlignment="Center"/>
                                                <TextBlock Text="{Binding TimeDisplay}"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           TextAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                                <Border Background="White"
                                                        CornerRadius="10"
                                                        Padding="10,4"
                                                        Margin="0,8,0,0"
                                                        HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding StatusDisplay}"
                                                               Foreground="Black"
                                                               FontSize="12"
                                                               FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>

                    <Grid x:Name="pnlMenu"
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="15">
                            <Button Content="⬅ CHỌN BÀN KHÁC"
                                    Click="BtnBackToTables_Click"
                                    HorizontalAlignment="Left"
                                    Background="#6c757d"
                                    Foreground="White"
                                    Height="40"
                                    Padding="15,0"
                                    FontWeight="Bold"
                                    BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <TextBlock Text="MENU MÓN ĂN"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           TextAlignment="Right"/>
                                <TextBlock Text="Chạm vào món để thêm ngay"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <TextBox Grid.Row="1"
                                 x:Name="txtDishSearch"
                                 Padding="10"
                                 FontSize="14"
                                 Margin="10,0,10,10"
                                 TextChanged="TxtDishSearch_TextChanged"/>
                        <TextBlock Grid.Row="1"
                                   Text="🔍 Search món (tên hoặc viết tắt)..."
                                   FontSize="14"
                                   Foreground="#999"
                                   Margin="0"
                                   IsHitTestVisible="False"
                                   TextAlignment="Center"
                                   Opacity="1">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtDishSearch}"
                                                     Value="">
                                            <Setter Property="Opacity"
                                                    Value="0.5"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtDishSearch}"
                                                     Value="{x:Null}">
                                            <Setter Property="Opacity"
                                                    Value="0.5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ListBox Grid.Row="2"
                                 x:Name="lstCategories"
                                 SelectionChanged="lstCategories_SelectionChanged"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 Height="50"
                                 BorderThickness="0,0,0,1"
                                 Background="Transparent"
                                 Margin="0,0,0,10">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,10"
                                            Background="Transparent"
                                            Cursor="Hand"
                                            Margin="2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                                 Value="True">
                                                        <Setter Property="Background"
                                                                Value="#E3F2FD"/>
                                                        <Setter Property="BorderBrush"
                                                                Value="#2196F3"/>
                                                        <Setter Property="BorderThickness"
                                                                Value="0,0,0,3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding CategoryName}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ScrollViewer Grid.Row="4"
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="10">
                            <ItemsControl x:Name="lstDishes">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="160"
                                                Height="140"
                                                Margin="8"
                                                CornerRadius="8"
                                                BorderThickness="1"
                                                BorderBrush="#E0E0E0"
                                                Cursor="Hand"
                                                Background="White"
                                                Tag="{Binding DishID}"
                                                MouseLeftButtonDown="Dish_MouseLeftButtonDown">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#DDD"
                                                                  BlurRadius="5"
                                                                  ShadowDepth="2"
                                                                  Opacity="0.4"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding DishName}"
                                                           TextWrapping="Wrap"
                                                           TextAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           Margin="10"
                                                           Foreground="#333"/>
                                                <TextBlock Grid.Row="1"
                                                           Text="{Binding Price, StringFormat={}{0:N0} đ}"
                                                           TextAlignment="Center"
                                                           Foreground="#F44336"
                                                           FontWeight="Bold"
                                                           FontSize="15"
                                                           Margin="0,0,0,15"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Background="#007BFF">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="lblSelectedTable"
                                   Text="Chưa chọn bàn"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="20,0,0,0"/>
                        <TextBlock x:Name="lblTableTime"
                                   Grid.Column="1"
                                   Text=""
                                   Foreground="White"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,15,0"/>
                        <Button Grid.Column="2"
                                Content="📤 Tách bàn"
                                Click="BtnSplitTable_Click"
                                Background="#FFC107"
                                Foreground="Black"
                                Height="36"
                                Width="120"
                                Margin="5,12"
                                FontWeight="Bold"
                                BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius"
                                            Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Grid.Column="3"
                                Content="🔄 Chuyển bàn"
                                Click="BtnMoveTable_Click"
                                Background="#28A745"
                                Foreground="White"
                                Height="36"
                                Width="120"
                                Margin="5,12,15,12"
                                FontWeight="Bold"
                                BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius"
                                            Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1"
                          x:Name="viewOrderDetails"
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0"
                                  x:Name="lstOrderDetails"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="White"
                                  RowHeight="55"
                                  FontSize="14">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background"
                                            Value="{Binding RowColor}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{Binding RowColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Món"
                                                        Width="*"
                                                        IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5,5">
                                                <TextBlock Text="{Binding DishName}"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,3"/>

                                                <Grid>
                                                    <TextBox Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Tag="{Binding OrderDetailID}"
                                                             Style="{StaticResource NoteTextBoxStyle}"
                                                             LostFocus="TxtNote_LostFocus"
                                                             ToolTip="Nhấn để nhập ghi chú (Ví dụ: Ít đường, Không đá...)"/>
                                                    <TextBlock Text="Ghi chú"
                                                               FontSize="12"
                                                               Foreground="#BBB"
                                                               FontStyle="Italic"
                                                               Margin="5,2"
                                                               IsHitTestVisible="False"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding Note, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Đợt"
                                                    Binding="{Binding BatchDisplay}"
                                                    Width="50"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Center"/>
                                            <Setter Property="VerticalAlignment"
                                                    Value="Center"/>
                                            <Setter Property="FontStyle"
                                                    Value="Italic"/>
                                            <Setter Property="Foreground"
                                                    Value="Gray"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="SL"
                                                        Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        x:Name="pnlQuantityControls">
                                                <Button Content="-"
                                                        Click="BtnDecrease_Click"
                                                        Tag="{Binding OrderDetailID}"
                                                        Width="30"
                                                        Height="30"
                                                        Background="#F8F9FA"
                                                        BorderBrush="#DEE2E6"
                                                        BorderThickness="1"
                                                        FontWeight="Bold"
                                                        Foreground="#DC3545"
                                                        Cursor="Hand"
                                                        Margin="0,0,5,0"
                                                        x:Name="btnDecreaseControl"
                                                        Visibility="{Binding IsInSplitMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                <TextBlock x:Name="txtQuantityDisplay"
                                                           Text="{Binding Quantity}"
                                                           Width="30"
                                                           TextAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           FontSize="16"
                                                           Cursor="Hand"
                                                           MouseLeftButtonDown="TxtQuantity_MouseLeftButtonDown"
                                                           ToolTip="Nhấn để nhập số lượng trực tiếp"/>
                                                <TextBox x:Name="txtQuantityInput"
                                                         Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Tag="{Binding OrderDetailID}"
                                                         Visibility="Collapsed"
                                                         Width="30"
                                                         TextAlignment="Center"
                                                         MaxLength="3"
                                                         PreviewTextInput="QuantityInput_PreviewTextInput"
                                                         LostFocus="TxtQuantityInput_LostFocus"
                                                         KeyDown="TxtQuantityInput_KeyDown"
                                                         Padding="2"/>
                                                <Button Content="+"
                                                        Click="BtnIncrease_Click"
                                                        Tag="{Binding OrderDetailID}"
                                                        Width="30"
                                                        Height="30"
                                                        Background="#F8F9FA"
                                                        BorderBrush="#DEE2E6"
                                                        BorderThickness="1"
                                                        FontWeight="Bold"
                                                        Foreground="#28A745"
                                                        Cursor="Hand"
                                                        Margin="5,0,0,0"
                                                        x:Name="btnIncreaseControl"
                                                        Visibility="{Binding IsInSplitMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Tiền"
                                                        Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0}}"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding DiscountDisplay}"
                                                           FontSize="10"
                                                           Foreground="Red"
                                                           HorizontalAlignment="Right"
                                                           Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="✎"
                                                    Click="BtnEditItem_Click"
                                                    Tag="{Binding OrderDetailID}"
                                                    Width="30"
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#AAA"
                                                    ToolTip="Ghi chú / Hủy món / Giảm giá"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Tách"
                                        Width="60"
                                        x:Name="colSplitQuantity"
                                        Visibility="Collapsed">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding SplitQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Tag="{Binding OrderDetailID}"
                                                     TextAlignment="Center"
                                                     MaxLength="3"
                                                     PreviewTextInput="NumericOnly_PreviewTextInput"
                                                     LostFocus="TxtSplitQty_LostFocus"
                                                     ToolTip="Nhập số lượng cần tách"
                                                     Padding="5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="1"
                                    Margin="15">
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                        Orientation="Horizontal">
                                    <Button x:Name="btnDiscountBill"
                                            Content="🎫 Giảm Bill"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"
                                            Foreground="#007BFF"
                                            BorderThickness="0"
                                            Click="BtnDiscountBill_Click"/>
                                    <Button x:Name="btnTransferSplit"
                                            Content="✓ Chuyển"
                                            Background="#28A745"
                                            Foreground="White"
                                            Padding="15,5"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            Click="BtnTransferSplit_Click"
                                            Margin="10,0,0,0"
                                            Visibility="Collapsed"
                                            ToolTip="Chuyển những món đã chọn sang bàn khác"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                            HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <TextBlock Text="Tổng: "/>
                                        <TextBlock x:Name="lblSubTotal"
                                                   Text="0đ"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel x:Name="pnlDiscount"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Visibility="Collapsed">
                                        <TextBlock Text="Giảm: "
                                                   Foreground="Red"/>
                                        <TextBlock x:Name="lblDiscount"
                                                   Text="-0đ"
                                                   FontWeight="Bold"
                                                   Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,5,0,0">
                                        <TextBlock Text="KHÁCH TRẢ: "
                                                   FontSize="18"
                                                   FontWeight="Bold"/>
                                        <TextBlock x:Name="lblTotal"
                                                   Text="0đ"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#28A745"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="btnSendKitchen"
                                    Content="👨‍🍳 GỬI BẾP (In Đợt Mới)"
                                    Height="50"
                                    Margin="0,0,0,10"
                                    Background="#FD7E14"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Click="BtnSendKitchen_Click"/>
                            <Button x:Name="btnCheckout"
                                    Content="THANH TOÁN"
                                    Height="50"
                                    Background="#28A745"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    IsEnabled="False"
                                    Click="btnCheckout_Click"/>
                        </StackPanel>

                        <Border x:Name="bdToast"
                                Background="#CC28A745"
                                CornerRadius="20"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,130"
                                Padding="20,10"
                                Visibility="Collapsed"
                                IsHitTestVisible="False"
                                Panel.ZIndex="999">
                            <TextBlock x:Name="lblToastMessage"
                                       Text="Đã thêm món"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
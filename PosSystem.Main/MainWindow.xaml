<Window x:Class="PosSystem.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS SYSTEM - QUẢN LÝ BÀN"
        Height="768"
        Width="1366"
        WindowState="Maximized"
        Background="#F0F2F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- CỘT 1: SƠ ĐỒ BÀN (Rộng nhất) -->
            <ColumnDefinition Width="400"/>
            <!-- CỘT 2: SIDEBAR (Cố định) -->
        </Grid.ColumnDefinitions>

        <!-- === CỘT 1: DANH SÁCH BÀN === -->
        <!-- Đã sửa lỗi Effect tại đây -->
        <Border Grid.Column="0"
                Margin="10"
                Background="White"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Gray"
                        BlurRadius="10"
                        ShadowDepth="0"
                        Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="SƠ ĐỒ PHÒNG BÀN"
                        FontSize="20"
                        FontWeight="Bold"
                        Margin="20,15"
                        Foreground="#333"/>

                <!-- List Bàn (WrapPanel để tự xuống dòng) -->
                <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="lstTables"
                            SelectionChanged="lstTables_SelectionChanged"
                             BorderThickness="0"
                            Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                        IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- Thẻ Bàn -->
                                <Border Width="130"
                                        Height="100"
                                        Margin="10"
                                        CornerRadius="8"
                                        Cursor="Hand"
                                        Background="{Binding ColorBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Gray"
                                                BlurRadius="5"
                                                ShadowDepth="2"
                                                Opacity="0.3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TableName}"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    FontSize="18"
                                                    TextAlignment="Center"
                                                    TextWrapping="Wrap"/>
                                            <Border Background="White"
                                                    CornerRadius="10"
                                                    Padding="8,2"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding StatusDisplay}"
                                                        Foreground="Black"
                                                        FontSize="11"
                                                        FontWeight="SemiBold"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- === CỘT 2: SIDEBAR (ĐA CHỨC NĂNG) === -->
        <Border Grid.Column="1"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <!-- Header Tên Bàn -->
                    <RowDefinition Height="*"/>
                    <!-- Nội dung thay đổi (List Món hoặc Menu) -->
                </Grid.RowDefinitions>

                <!-- Header Sidebar -->
                <Grid Grid.Row="0"
                        Background="#007BFF">
                    <TextBlock x:Name="lblSelectedTable"
                            Text="Chưa chọn bàn"
                               Foreground="White"
                            FontWeight="Bold"
                            FontSize="18"
                               VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                </Grid>

                <!-- CONTAINER CHỨA 2 VIEW -->
                <Grid Grid.Row="1">

                    <!-- VIEW A: CHI TIẾT ĐƠN HÀNG (Mặc định hiện) -->
                    <Grid x:Name="viewOrderDetails"
                            Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- List món đã gọi -->
                        <DataGrid Grid.Row="0"
                                x:Name="lstOrderDetails"
                                AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                Background="White"
                                RowHeight="40"
                                FontSize="14">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tên món"
                                        Binding="{Binding DishName}"
                                        Width="*"
                                        IsReadOnly="True"/>
                                <DataGridTextColumn Header="SL"
                                        Binding="{Binding Quantity}"
                                        Width="50"
                                        IsReadOnly="True"/>
                                <DataGridTextColumn Header="T.Tiền"
                                        Binding="{Binding TotalAmount, StringFormat={}{0:N0}}"
                                        Width="90"
                                        IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Footer: Nút bấm -->
                        <StackPanel Grid.Row="1"
                                Margin="15">
                            <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,15">
                                <TextBlock Text="Tổng tiền: "
                                        FontSize="16"/>
                                <TextBlock x:Name="lblTotal"
                                        Text="0đ"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="Red"/>
                            </StackPanel>

                            <!-- Nút thêm món -->
                            <Button Content="+ THÊM MÓN"
                                    Height="45"
                                    Background="#17A2B8"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="0,0,0,10"
                                    Click="BtnShowMenu_Click"/>

                            <!-- Nút thanh toán -->
                            <Button x:Name="btnCheckout"
                                    Content="THANH TOÁN"
                                    Height="50"
                                    Background="#28A745"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    IsEnabled="False"
                                    Click="btnCheckout_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- VIEW B: MENU CHỌN MÓN (Mặc định ẩn) -->
                    <Grid x:Name="viewMenu"
                            Visibility="Collapsed"
                            Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Nút Quay lại -->
                            <RowDefinition Height="Auto"/>
                            <!-- Tabs Danh mục -->
                            <RowDefinition Height="*"/>
                            <!-- List Món -->
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0"
                                Content="⬅ QUAY LẠI ĐƠN HÀNG"
                                Height="40"
                                Background="#6C757D"
                                Foreground="White"
                                Click="BtnBackToOrder_Click"
                                Margin="5"/>

                        <ListBox Grid.Row="1"
                                x:Name="lstCategories"
                                SelectionChanged="lstCategories_SelectionChanged"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                Height="50"
                                 BorderThickness="0,0,0,1">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,10"
                                            Background="Transparent"
                                            Cursor="Hand">
                                        <TextBlock Text="{Binding CategoryName}"
                                                FontWeight="SemiBold"
                                                FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ScrollViewer Grid.Row="2"
                                Padding="5">
                            <ItemsControl x:Name="lstDishes">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Width="110"
                                                Height="90"
                                                Margin="4"
                                                Click="BtnDish_Click"
                                                Tag="{Binding DishID}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="White"
                                                            BorderBrush="#EEE"
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="{Binding DishName}"
                                                                    TextWrapping="Wrap"
                                                                    TextAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                    FontWeight="SemiBold"
                                                                    Margin="2"
                                                                    FontSize="12"/>
                                                            <TextBlock Grid.Row="1"
                                                                    Text="{Binding Price, StringFormat={}{0:N0}}"
                                                                       TextAlignment="Center"
                                                                    Foreground="#D9534F"
                                                                    Margin="0,0,0,4"
                                                                    FontSize="12"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
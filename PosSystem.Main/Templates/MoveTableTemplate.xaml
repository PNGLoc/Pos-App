<UserControl x:Class="PosSystem.Main.Templates.MoveTableTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="550"
             Background="White"
             FontFamily="Arial">
    <!-- Width 550px phù hợp với máy in 80mm -->

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Nội dung chuyển bàn: Bàn X chuyển đến Bàn Y -->
        <TextBlock x:Name="txtMoveInfo"
                   Text="Bàn X chuyển đến Bàn Y"
                   FontSize="40"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"/>

        <!-- Thời gian -->
        <TextBlock x:Name="txtTime"
                   Text="00:00:00"
                   FontSize="24"
                   Foreground="Black"
                   TextAlignment="Center"/>
    </StackPanel>
</UserControl>

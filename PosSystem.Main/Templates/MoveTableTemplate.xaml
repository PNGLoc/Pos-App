<UserControl x:Class="PosSystem.Main.Templates.MoveTableTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="550"
             Background="White"
             FontFamily="Arial">
    <!-- Width 550px phù hợp với máy in 80mm -->

    <StackPanel Margin="10"
            VerticalAlignment="Top">
        <!-- Tiêu đề -->
        <TextBlock Text="═══════════════════════════"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <TextBlock Text="CHUYỂN BÀN"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <TextBlock Text="═══════════════════════════"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Nội dung chuyển bàn -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Từ: "
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="Black"/>
            <TextBlock Grid.Column="1"
                       x:Name="txtOldTable"
                       Text="Bàn 0"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="5,0,0,0"/>
        </Grid>

        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Sang: "
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="Black"/>
            <TextBlock Grid.Column="1"
                       x:Name="txtNewTable"
                       Text="Bàn 0"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="5,0,0,0"/>
        </Grid>

        <!-- Thời gian -->
        <TextBlock x:Name="txtTime"
                   Text="Thời gian: 00:00:00"
                   FontSize="12"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Footer -->
        <TextBlock Text="═══════════════════════════"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>
    </StackPanel>
</UserControl>

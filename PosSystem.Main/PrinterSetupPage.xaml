<UserControl x:Class="PosSystem.Main.Pages.PrinterSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- List -->
            <ColumnDefinition Width="350"/>
            <!-- Form Edit -->
        </Grid.ColumnDefinitions>

        <!-- DANH SÁCH MÁY IN -->
        <Grid Grid.Column="0"
              Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="DANH SÁCH MÁY IN"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <DataGrid x:Name="dgPrinters"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="White"
                      RowHeight="40"
                      SelectionChanged="dgPrinters_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding PrinterID}"
                                        Width="40"/>
                    <DataGridTextColumn Header="Tên Máy"
                                        Binding="{Binding PrinterName}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Loại"
                                        Binding="{Binding ConnectionType}"
                                        Width="60"/>
                    <DataGridTextColumn Header="Kết nối (IP/USB)"
                                        Binding="{Binding ConnectionString}"
                                        Width="150"/>
                    <DataGridCheckBoxColumn Header="In Bill?"
                                            Binding="{Binding IsBillPrinter}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- FORM THÊM / SỬA -->
        <Border Grid.Column="1"
                Background="White"
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="CHI TIẾT CẤU HÌNH"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Tên máy in (Vd: Bếp 1):"/>
                <TextBox x:Name="txtName"
                         Height="35"
                         Margin="0,5,0,15"/>

                <TextBlock Text="Loại kết nối:"/>
                <ComboBox x:Name="cboType"
                          Height="35"
                          Margin="0,5,0,15"
                          SelectedIndex="0">
                    <ComboBoxItem Content="LAN (Mạng nội bộ)"/>
                    <ComboBoxItem Content="USB (Driver Windows)"/>
                </ComboBox>

                <TextBlock Text="IP hoặc Tên Share (Vd: 192.168.1.100):"/>
                <TextBox x:Name="txtString"
                         Height="35"
                         Margin="0,5,0,15"/>

                <CheckBox x:Name="chkIsBill"
                          Content="Đây là máy in Hóa đơn (Thu ngân)"
                          Margin="0,5,0,15"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="⚡ In Thử"
                            Width="80"
                            Height="35"
                            Background="#17A2B8"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Click="BtnTest_Click"/>
                    <Button Content="Lưu Mới"
                            Width="80"
                            Height="35"
                            Background="#28A745"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Click="BtnAdd_Click"/>
                    <Button Content="Cập nhật"
                            Width="80"
                            Height="35"
                            Background="#007BFF"
                            Foreground="White"
                            Click="BtnUpdate_Click"/>
                    <Button Content="Xóa"
                            Width="60"
                            Height="35"
                            Background="#DC3545"
                            Foreground="White"
                            Margin="10,0,0,0"
                            Click="BtnDelete_Click"/>

                </StackPanel>

                <TextBlock Text="* Ghi chú: Với USB, hãy cài Driver và nhập đúng tên máy in trong Control Panel."
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="12"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
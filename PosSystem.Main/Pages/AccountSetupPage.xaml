<UserControl x:Class="PosSystem.Main.Pages.AccountSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgAcc"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,10,0"
                  SelectionChanged="DgAcc_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên"
                                    Binding="{Binding AccName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Tài khoản"
                                    Binding="{Binding Username}"
                                    Width="100"/>
                <DataGridTextColumn Header="Quyền"
                                    Binding="{Binding AccRole}"
                                    Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Column="1"
                Background="White"
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="QUẢN LÝ NHÂN VIÊN"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Họ tên hiển thị:"/>
                <TextBox x:Name="txtName"
                         Height="35"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Tên đăng nhập:"/>
                <TextBox x:Name="txtUser"
                         Height="35"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Mật khẩu:"/>
                <TextBox x:Name="txtPass"
                         Height="35"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Chức vụ:"/>
                <ComboBox x:Name="cboRole"
                          Height="35"
                          Margin="0,5,0,20"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Staff"/>
                </ComboBox>
                <GroupBox Header="Quyền hạn chi tiết"
                          Margin="0,0,0,20"
                          Padding="5">
                    <StackPanel>
                        <CheckBox x:Name="chkMoveTable"
                                  Content="Được chuyển bàn"
                                  Margin="0,5"/>
                        <CheckBox x:Name="chkPayment"
                                  Content="Được thanh toán"
                                  Margin="0,5"/>
                        <CheckBox x:Name="chkCancelItem"
                                  Content="Được hủy món"
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Thêm"
                            Width="70"
                            Click="BtnAdd_Click"
                            Background="#28A745"
                            Foreground="White"
                            Margin="5"/>
                    <Button Content="Sửa"
                            Width="70"
                            Click="BtnUpdate_Click"
                            Background="#007BFF"
                            Foreground="White"
                            Margin="5"/>
                    <Button Content="Xóa"
                            Width="70"
                            Click="BtnDelete_Click"
                            Background="#DC3545"
                            Foreground="White"
                            Margin="5"/>
                </StackPanel>
                <Button Content="Làm mới"
                        Click="BtnClear_Click"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>